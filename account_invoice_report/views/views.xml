<odoo>
    <record id="view_currency_form_ar" model="ir.ui.view">
        <field name="name">view_currency_form_ar</field>
        <field name="model">res.currency</field>
        <field name="inherit_id" ref="base.view_currency_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='currency_subunit_label']" position="after">
                <field name="ar_currency_unit_label"/>
                <field name="ar_currency_subunit_label"/>
            </xpath>
        </field>
    </record>

    <!-- Inherit Form View to Modify it -->
    <record id="account_view_move_form_inherit" model="ir.ui.view">
        <field name="name">account_view_move_form_inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='payment_reference']" position="after">
                <!-- Add your fields or attributes here -->
                <field name="note"/>
                <field name="print_count" invisible="1" />
            </xpath>
            <xpath expr="//button[@name='action_register_payment']" position="after">
                <!-- Add your fields or attributes here -->
                <button name="action_print_invoice_inherited" type="object" string="Print Invoice"/>
            </xpath>


        </field>
    </record>

    <record id="account.account_invoices" model="ir.actions.report">
        <field name="binding_model_id" eval="False"/>
    </record>
</odoo>