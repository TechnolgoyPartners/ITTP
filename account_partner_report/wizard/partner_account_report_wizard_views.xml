<?xml version="1.0"?>
<odoo>
    <record id="partner_account_report_wizard_form" model="ir.ui.view">
        <field name="name">partner.account.report.wizard.form</field>
        <field name="model">partner.account.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Partner Account Report">
                <group>
                    <group>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="is_initial_balance"/>
                        <field name="move_state" widget="radio"/>
                    </group>
                    <group>
                        <field name="partner_ids" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"
                               widget="many2many_tags"/>
                        <field name="account_ids" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"
                               widget="many2many_tags"/>
                        <field name="journal_ids" options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"
                               widget="many2many_tags"/>
                        <field name="account_analytic_ids"
                               options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"
                               widget="many2many_tags"/>
                        <field name="analytic_tag_ids"
                               options="{'no_create_edit': True, 'no_create': True, 'no_open': True}"
                               widget="many2many_tags"/>
                    </group>
                </group>
                <footer>
                    <button name="print_html" string="View" type="object" class="btn-primary"/>
                    or
                    <button name="print_pdf" string="Print" type="object" class="btn-primary"/>
                    or
                    <button name="print_excel" string="Print Excel" type="object" class="btn-primary"/>
                    or
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="partner_account_report_wizard_action" model="ir.actions.act_window">
        <field name="name">Partner Account Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">partner.account.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="partner_account_report_wizard_form"/>
        <field name="target">new</field>
    </record>

    <menuitem id="partner_account_report_wizard_menu" name="Partner Account Report"
              parent="account.menu_finance_reports"
              action="partner_account_report_wizard_action" sequence="10"/>


</odoo>
