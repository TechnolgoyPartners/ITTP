<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="commission_users_invoice_form" model="ir.ui.view">
            <field name="name">commission.users.invoice.form</field>
            <field name="model">commission.users.invoice</field>
            <field name="arch" type="xml">
                <form string="Commission Invoice">
                    <header>
                        <button name="search_user_commission" string="Search" class="oe_highlight" states="new"
                                type="object"/>
                        <button name="action_done" string="Done" class="oe_highlight" states="new"
                                type="object"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="user_id" option="{'no_create': True}"
                                       attrs="{'readonly':[('state', '=', 'done')]}"/>
                                <field name="date" attrs="{'readonly':[('state', '=', 'done')]}"/>
                            </group>
                            <group>
                                <field name="from_date" attrs="{'readonly':[('state', '=', 'done')]}"/>
                                <field name="to_date" attrs="{'readonly':[('state', '=', 'done')]}"/>
                                <field name="total_commission" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Invoices">
                                <field name="invoice_ids" readonly="1"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="commission_users_invoice_tree" model="ir.ui.view">
            <field name="name">commission.users.invoice.tree</field>
            <field name="model">commission.users.invoice</field>
            <field name="arch" type="xml">
                <tree string="Commission Invoice">
                    <field name="user_id"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="total_commission"/>
                </tree>
            </field>
        </record>

        <record id="commission_users_invoice_action" model="ir.actions.act_window">
            <field name="name">Commission Invoice</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">commission.users.invoice</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Add new Commission Invoice
                </p>
            </field>
        </record>

        <menuitem id="commission_users_invoice_menu" name="Commission Invoices" parent="menu_commission"
                  action="commission_users_invoice_action" sequence="20"/>

    </data>
</odoo>