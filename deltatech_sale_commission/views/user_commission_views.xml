<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="user_commission_form" model="ir.ui.view">
            <field name="name">user.commission.form</field>
            <field name="model">user.commission</field>
            <field name="arch" type="xml">
                <form string="Commission">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <label for="name" class="oe_edit_only"/>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="description"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Conditions">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="name" widget="handle"/>
                                        <field name="start_amount"/>
                                        <field name="end_amount"/>
                                        <field name="commission"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="user_commission_tree" model="ir.ui.view">
            <field name="name">user.commission.tree</field>
            <field name="model">user.commission</field>
            <field name="arch" type="xml">
                <tree string="Commission">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="user_commission_action" model="ir.actions.act_window">
            <field name="name">Commission</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">user.commission</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Add New Commission
                </p>
            </field>
        </record>

        <menuitem id="user_commission_config_menu" name="Commission Configuration" parent="sale.menu_sale_config"
                  action="user_commission_action"/>

    </data>
</odoo>