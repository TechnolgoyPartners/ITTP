<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

       <!-- Inherit Form View to Modify it -->
       <record id="purchase_order_form_inherit_custom" model="ir.ui.view">
           <field name="name">purchase_order_form_inherit_custom</field>
           <field name="model">purchase.order</field>
           <field name="inherit_id" ref="purchase.purchase_order_form"/>
           <field name="arch" type="xml">

               <xpath expr="//field[@name='partner_id']" position="before">
                   <!-- Add your fields or attributes here -->
                   <field name="purchase_order_seq" readonly="1"/>
               </xpath>

               <xpath expr="//field[@name='currency_id']" position="after">
                   <field name="quotation_template_custom_id"/>
                   <field name="note"/>
                   <field name="shipping_term_custom_id"/>
                   <field name="shipping_note"/>
               </xpath>

           </field>
       </record>

    </data>
</odoo>