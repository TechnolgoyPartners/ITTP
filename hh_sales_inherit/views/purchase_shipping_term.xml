<odoo>
    <data>


        <record id="purchase_shipping_term_action" model="ir.actions.act_window">
            <field name="name">Shipping Term</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">purchase.shipping.term</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No Terms found. Let's create one!
                </p>
                <p>
                    Terms are perfect for organizing your Shipping ....
                </p>
            </field>
        </record>


        <record id="purchase_shipping_term_view_tree" model="ir.ui.view">
            <field name="name">purchase.shipping.term.view.tree</field>
            <field name="model">purchase.shipping.term</field>
            <field name="arch" type="xml">
                <tree editable="top" string="Tag" sample="1" multi_edit="1">
                    <field name="name"/>
                    <field name="shipping_note"/>
                </tree>
            </field>
        </record>

        <record id="purchase_shipping_term_view_form" model="ir.ui.view">
            <field name="name">purchase.shipping.term.view.form</field>
            <field name="model">purchase.shipping.term</field>
            <field name="arch" type="xml">
                <form string="Tags">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="shipping_note"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- This Menu Item Must have a parent -->
        <menuitem id="purchase_shipping_term_menuitem"
                  name="Shipping Terms"
                  action="purchase_shipping_term_action"
                  parent="purchase.menu_purchase_config"
                  sequence="3"/>

    </data>
</odoo>