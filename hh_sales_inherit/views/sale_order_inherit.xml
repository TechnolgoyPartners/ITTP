<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="sale_order_inherit_form_view_hide_note" model="ir.ui.view">
            <field name="name">sale.order.inherit.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='note']" position="replace">
                    <!-- Add your fields or attributes here -->
                </xpath>
                <xpath expr="//field[@name='sale_order_template_id']" position="replace">
                    <!-- Add your fields or attributes here -->
                    <field name="quotation_template_custom_id"/>
                </xpath>
                <xpath expr="//field[@name='quotation_template_custom_id']" position="after">
                    <!-- Add your fields or attributes here -->
                    <field name="note"/>
                </xpath>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="shipping_term_custom_id"/>
                    <field name="shipping_note"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>