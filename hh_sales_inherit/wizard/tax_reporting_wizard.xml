<?xml version="1.0"?>
<odoo>
    <record id="tax_reporting_wizard_report" model="ir.ui.view">
        <field name="name">tax.reporting.wizard.report</field>
        <field name="model">tax.reporting.wizard</field>
        <field name="arch" type="xml">
            <form string="Tax Report">
                <group class="oe_title">
                    <field name="start_date"/>
                    <field name="end_date"/>
                </group>
                <footer>
                    <button name="action_create_tax_report" string="View" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_tax_reporting_wizard_report" model="ir.actions.act_window">
        <field name="name">Tax Reporting Report</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">tax.reporting.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="tax_reporting_wizard_report"/>
        <field name="target">new</field>
    </record>


    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="tax_reporting_wizard_report_menuitem" name="Taxes Reporting"
              parent="account.menu_finance_reports"
              action="action_tax_reporting_wizard_report" sequence="10"/>



</odoo>
