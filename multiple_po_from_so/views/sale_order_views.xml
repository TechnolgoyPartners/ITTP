<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_order_form_inherit" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="is_purchase_created" invisible="1"/>
                </xpath>

                <xpath expr="//header" position="inside">
                    <button name="action_create_rfq" type="object" string="Create RFQ"
                            attrs="{'invisible':['|', ('state','!=','draft'), ('is_purchase_created','=', True)]}"/>
                </xpath>

                <xpath expr="//div[@name='button_box']" position="inside">
                    <button
                            class="oe_stat_button"
                            icon="fa-credit-card"
                            type="object"
                            name="action_purchase_order"
                            attrs="{'invisible': [('purchase_count','=', 0)]}"
                    >
                        <div class="o_stat_info">
                            <span class="o_stat_value">
                                <field name="purchase_count" digits="[42,1]"/>
                            </span>
                            <span class="o_stat_text">
                                Purchase
                            </span>
                        </div>
                    </button>
                </xpath>

                <xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
                    <field name="partner_ids" widget="many2many_tags"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>