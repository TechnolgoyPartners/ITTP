<odoo>
    <template id="sale.report_saleorder_document">
        <t t-call="sale_print.custom_internal_layout">
            <div class="row">
                <div class="col-6">
                    <div>
                        <img t-if="docs.company_id.logo"
                             t-att-src="'data:image/png;base64,%s' % to_text(docs.company_id.logo)"
                             style="width:60px;height:50px;"/>
                    </div>
                    <div>
                        <span t-if="docs.company_id.street" t-field="docs.company_id.street"/>
                        <br/>
                        <span t-if="docs.company_id.city" t-field="docs.company_id.city"/>
                        <span t-if="docs.company_id.zip" t-field="docs.company_id.zip"/>,
                        <br/>
                        Tel:
                        <span t-if="docs.company_id.phone" t-field="docs.company_id.phone"/>
                        <br/>
                        VAT:
                        <span t-if="docs.company_id.vat" t-field="docs.company_id.vat"/>
                    </div>
                </div>
                <div class="col-6">
                    <h4 style="text-align:center;">
                        <strong>Sales Quotation</strong>
                    </h4>
                    <table class="table" style="border-collapse: collapse;font-size:12px;">
                        <tr style="line-height: 12px;">
                            <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                <span>Quote</span>
                            </td>
                            <td colspan="4" style="border: 1px solid black;">
                                <span t-field="doc.name"/>
                            </td>
                        </tr>
                        <tr style="line-height: 12px;">
                            <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                <span>SalesMan</span>
                            </td>
                            <td colspan="4" style="border: 1px solid black;">
                                <span t-field="doc.user_id.name"/>
                            </td>
                        </tr>

                        <tr style="line-height: 12px;">
                            <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                <span>SalesMan Email</span>
                            </td>
                            <td colspan="4" style="border: 1px solid black;">
                                <span t-field="doc.user_id.work_email"/>
                            </td>
                        </tr>
                        <tr style="line-height: 12px;">
                            <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                <span>Date</span>
                            </td>
                            <td colspan="4" style="border: 1px solid black;">
                                <span t-field="doc.date_order"/>
                            </td>
                        </tr>
                        <tr style="line-height: 12px;">
                            <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                <span>Expiry Date</span>
                            </td>
                            <td colspan="4" style="border: 1px solid black;">
                                <span t-field="doc.validity_date"/>
                            </td>
                        </tr>
                        <tr style="line-height: 12px;">
                            <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                <span>Payment Terms</span>
                            </td>
                            <td colspan="4" style="border: 1px solid black;">
                                <span t-field="doc.payment_term_id.name"/>
                            </td>
                        </tr>
                        <tr style="line-height: 12px;">
                            <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                <span>Country</span>
                            </td>
                            <td colspan="4" style="border: 1px solid black;">
                                <span t-field="doc.company_id.country_id.name"/>
                            </td>
                        </tr>
                        <tr style="line-height: 12px;">
                            <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                <span>Currency</span>
                            </td>
                            <td colspan="4" style="border: 1px solid black;">
                                <span t-field="doc.currency_id.name"/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <div class="page">
                <div class="oe_structure"/>
                <div class="row mt32 mb32" id="informations" t-if="not doc.partner_id">
                    <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2">
                        <strong>Your Reference:</strong>
                        <p class="m-0" t-field="doc.client_order_ref"/>
                    </div>
                    <div t-if="doc.date_order and doc.state not in ['draft','sent']" class="col-auto col-3 mw-100 mb-2">
                        <strong>Order Date:</strong>
                        <p class="m-0" t-field="doc.date_order"/>
                    </div>
                    <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-auto col-3 mw-100 mb-2">
                        <strong>Quotation Date:</strong>
                        <p class="m-0" t-field="doc.date_order" t-options='{"widget": "date"}'/>
                    </div>
                    <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto col-3 mw-100 mb-2"
                         name="expiration_date">
                        <strong>Expiration:</strong>
                        <p class="m-0" t-field="doc.validity_date"/>
                    </div>
                    <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                        <strong>Salesperson:</strong>
                        <p class="m-0" t-field="doc.user_id"/>
                    </div>
                </div>
                <div t-if="not doc.partner_id" class="mt32 ml64 mr4" name="signature">
                    <div class="offset-8">
                        <strong>Signature</strong>
                    </div>
                    <div class="offset-8">
                        <img t-att-src="image_data_uri(doc.signature)" style="max-height: 4cm; max-width: 8cm;"/>
                    </div>
                    <div class="offset-8 text-center">
                        <p t-field="doc.signed_by"/>
                    </div>
                </div>
                <!--> ========================================================================================================== -->
                <div class="row">
                    <div class="col-6 text-center" style="text-align:center;direction:ltr;">
                        <br/>
                        <h4 style="text-align:center;">
                            <strong>Reseller Details</strong>
                        </h4>
                        <table class="table" style="border-collapse: collapse;font-size:12px;">
                            <tr style="line-height: 12px;">
                                <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                    <span>Company Name</span>
                                </td>
                                <td colspan="4" style="border: 1px solid black;">
                                    <span t-field="doc.company_id.name"/>
                                </td>
                            </tr>
                            <tr style="line-height: 12px;">
                                <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                    <span>Address</span>
                                </td>
                                <td colspan="4" style="border: 1px solid black;">
                                    <span t-field="doc.company_id.street"/>
                                </td>
                            </tr>
                            <tr style="line-height: 12px;">
                                <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                    <span>Country</span>
                                </td>
                                <td colspan="4" style="border: 1px solid black;">
                                    <span t-field="doc.company_id.country_id.name"/>
                                </td>
                            </tr>
                            <tr style="line-height: 12px;">
                                <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                    <span>Contact Person</span>
                                </td>
                                <td colspan="4" style="border: 1px solid black;">
                                    <t t-if="doc.company_id.partner_id.child_ids">
                                        <span t-field="doc.company_id.partner_id.child_ids[0].name"/>
                                    </t>
                                </td>
                            </tr>
                            <tr style="line-height: 12px;">
                                <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                    <span>Phone</span>
                                </td>
                                <td colspan="4" style="border: 1px solid black;">
                                    <span t-field="doc.company_id.phone"/>
                                </td>
                            </tr>
                            <tr style="line-height: 12px;">
                                <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                    <span>Email Address</span>
                                </td>
                                <td colspan="4" style="border: 1px solid black;">
                                    <span t-field="doc.company_id.email"/>
                                </td>
                            </tr>
                            <tr style="line-height: 12px;">
                                <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                    <span>Website</span>
                                </td>
                                <td colspan="4" style="border: 1px solid black;">
                                    <span t-field="doc.company_id.website"/>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-6 text-center" style="text-align:center;direction:ltr;">
                        <br/>
                        <h4 style="text-align:center;">
                            <strong>End User Details</strong>
                        </h4>
                        <table class="table" style="border-collapse: collapse;font-size:12px;">
                            <tr style="line-height: 12px;">
                                <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                    <span>Partner Name</span>
                                </td>
                                <td colspan="4" style="border: 1px solid black;">
                                    <span t-field="doc.partner_id.name"/>
                                </td>
                            </tr>
                            <tr t-if="doc.partner_id.street" style="line-height: 12px;">
                                <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                    <span>Address</span>
                                </td>
                                <td colspan="4" style="border: 1px solid black;">
                                    <span t-field="doc.partner_id.street"/>
                                </td>
                            </tr>
                            <tr t-if="doc.partner_id.country_id.name" style="line-height: 12px;">
                                <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                    <span>Country</span>
                                </td>
                                <td colspan="4" style="border: 1px solid black;">
                                    <span t-field="doc.partner_id.country_id.name"/>
                                </td>
                            </tr>
                            <tr t-if="doc.partner_id.phone" style="line-height: 12px;">
                                <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                    <span>Phone</span>
                                </td>
                                <td colspan="4" style="border: 1px solid black;">
                                    <span t-field="doc.partner_id.phone"/>
                                </td>
                            </tr>
                            <tr style="line-height: 12px;">
                                <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
                                    <span>Email Address</span>
                                </td>
                                <td colspan="4" style="border: 1px solid black;">
                                    <span t-field="doc.partner_id.email"/>
                                </td>
                            </tr>
                            <tr t-if="doc.partner_id.website" style="line-height: 12px;">
                                <td colspan="2" style="border: 1px solid black;background-color: #e9ecef;">
